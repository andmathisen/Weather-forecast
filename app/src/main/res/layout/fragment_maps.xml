<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="47dp" app:srcCompat="@drawable/ic_kayakkk" android:id="@+id/logo"
            style="@style/AppTheme" android:background="@color/mainBlue"/>

    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".MapsFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment" android:layout_marginTop="0dp"
            android:layout_below="@+id/logo" tools:layout="@layout/fragment_maps"
            android:layout_alignParentBottom="true" android:layout_marginBottom="0dp">


    </fragment>



</RelativeLayout>